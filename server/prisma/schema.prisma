generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CLIENT
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  phone     String
  role      UserRole @default(CLIENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings  Booking[]
  
  @@map("users")
}

model Service {
  id          String   @id @default(uuid())
  title       String
  description String
  price       String
  duration    Int      // duração em minutos
  warranty    String
  includes    String[] // array de itens inclusos
  image       String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bookings    Booking[]

  @@map("services")
}

model Booking {
  id              String        @id @default(uuid())
  serviceId       String
  userId          String
  scheduledDate   DateTime      // data e hora do serviço
  address         String
  notes           String?
  status          BookingStatus @default(PENDING)
  
  // Controle de cancelamento
  canCancel       Boolean       @default(true) // calculado: 24h antes
  cancelledAt     DateTime?
  cancelReason    String?
  
  // Mudanças notificadas ao cliente
  wasModified     Boolean       @default(false)
  modificationNote String?
  clientNotified  Boolean       @default(false)
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  service         Service       @relation(fields: [serviceId], references: [id])
  user            User          @relation(fields: [userId], references: [id])

  @@map("bookings")
}